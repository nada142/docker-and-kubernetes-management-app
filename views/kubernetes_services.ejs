        function loadNamespaces() {
            fetch('http://localhost:5000//kubernetes/namespaces')
            .then(response => response.json())
            .then(data => {
                if (data.items && data.items.length > 0) {
                    const namespaceSelect = document.getElementById('namespace');
                    const namespaceFilter = document.getElementById('namespaceFilter');
                    
                    // Clear existing options except the first one
                    while (namespaceSelect.options.length > 2) {
                        namespaceSelect.remove(2);
                    }
                    while (namespaceFilter.options.length > 1) {
                        namespaceFilter.remove(1);
                    }
                    
                    // Add new options
                    data.items.forEach(ns => {
                        if (ns.metadata.name !== 'default' && ns.metadata.name !== 'kube-system') {
                            const option = document.createElement('option');
                            option.value = ns.metadata.name;
                            option.textContent = ns.metadata.name;
                            namespaceSelect.appendChild(option.cloneNode(true));
                            namespaceFilter.appendChild(option);
                        }
                    });
                }
            })
            .catch(error => {
                console.error('Error loading namespaces:', error);
            });
        }
        
        function loadDeploymentsForSelector() {
            fetch('http://localhost:5000//kubernetes/deployments')
            .then(response => response.json())
            .then(data => {
                if (data.items && data.items.length > 0) {
                    const deploymentSelector = document.getElementById('deploymentSelector');
                    
                    // Clear existing options except the first one
                    while (deploymentSelector.options.length > 1) {
                        deploymentSelector.remove(1);
                    }
                    
                    // Add new options
                    data.items.forEach(deployment => {
                        const option = document.createElement('option');
                        option.value = JSON.stringify(deployment);
                        option.textContent = `${deployment.metadata.name} (${deployment.metadata.namespace})`;
                        deploymentSelector.appendChild(option);
                    });
                }
            })
            .catch(error => {
                console.error('Error loading deployments:', error);
            });
        }
        
        function loadServices() {
            const namespaceFilter = document.getElementById('namespaceFilter').value;
            const servicesTableBody = document.getElementById('servicesTableBody');
            
            servicesTableBody.innerHTML = `
                <tr>
                    <td colspan="8" class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p>Loading services...</p>
                    </td>
                </tr>
            `;
            
            let apiUrl = 'http://localhost:5000//kubernetes/services';
            if (namespaceFilter) {
                apiUrl += `?namespace=${namespaceFilter}`;
            }
            
            fetch(apiUrl)
            .then(response => response.json())
            .then(data => {
                if (data.items && data.items.length > 0) {
                    servicesTableBody.innerHTML = data.items.map(service => {
                        const type = service.spec.type;
                        let typeBadgeClass = '';
                        switch (type) {
                            case 'ClusterIP': typeBadgeClass = 'cluster-ip'; break;
                            case 'NodePort': typeBadgeClass = 'node-port'; break;
                            case 'LoadBalancer': typeBadgeClass = 'load-balancer'; break;
                            case 'ExternalName': typeBadgeClass = 'external-name'; break;
                            default: typeBadgeClass = 'bg-primary';
                        }
                        
                        // Format ports
                        let portsHtml = '';
                        if (service.spec.ports) {
                            service.spec.ports.forEach(port => {
                                let portStr = `${port.port}`;
                                if (port.targetPort) {
                                    portStr += `:${port.targetPort}`;
                                }
                                if (port.protocol && port.protocol !== 'TCP') {
                                    portStr += `/${port.protocol}`;
                                }
                                if (port.nodePort && type === 'NodePort') {
                                    portStr += ` (Node:${port.nodePort})`;
                                }
                                portsHtml += `<div class="port-mapping">${portStr}</div>`;
                            });
                        }
                        
                        // Format selector
                        let selectorHtml = '';
                        if (service.spec.selector) {
                            for (const [key, value] of Object.entries(service.spec.selector)) {
                                selectorHtml += `<span class="badge selector-badge bg-light text-dark">${key}=${value}</span>`;
                            }
                        } else if (service.spec.type === 'ExternalName') {
                            selectorHtml = '<span class="badge selector-badge bg-light text-dark">External: ' + service.spec.externalName + '</span>';
                        }
                        
                        const age = timeSince(new Date(service.metadata.creationTimestamp));
                        
                        return `
                            <tr>
                                <td>${service.metadata.name}</td>
                                <td>${service.metadata.namespace}</td>
                                <td><span class="badge service-type-badge ${typeBadgeClass}">${type}</span></td>
                                <td>${service.spec.clusterIP || '-'}</td>
                                <td>${portsHtml || '-'}</td>
                                <td>${selectorHtml || '-'}</td>
                                <td>${age}</td>
                                <td>
  <div class="action-buttons">
    <button class="action-btn btn-yaml" onclick="showServiceYaml('${service.metadata.name}', '${service.metadata.namespace}')"
            data-tooltip="View YAML">
      <i class="fas fa-code"></i> YAML
    </button>
    <button class="action-btn btn-delete" onclick="showDeleteModal('${service.metadata.name}', '${service.metadata.namespace}')"
            data-tooltip="Delete service">
      <i class="fas fa-trash-alt"></i> Delete
    </button>
  </div>
</td>
                            </tr>
                        `;
                    }).join('');
                } else {
                    servicesTableBody.innerHTML = `
                        <tr>
                            <td colspan="8" class="text-center">No services found</td>
                        </tr>
                    `;
                }
            })
            .catch(error => {
                servicesTableBody.innerHTML = `
                    <tr>
                        <td colspan="8" class="text-center text-danger">Error loading services: ${error.message}</td>
                    </tr>
                `;
            });
        }
        
