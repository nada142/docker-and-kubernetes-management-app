// Create StorageClass
document.getElementById('createStorageClassForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const name = document.getElementById('scName').value;
  const provisioner = document.getElementById('scProvisioner').value;
  const isDefault = document.getElementById('scIsDefault').checked;
  let parameters = {};
  
  try {
    const paramsText = document.getElementById('scParameters').value;
    if (paramsText) parameters = JSON.parse(paramsText);
  } catch (error) {
    Swal.fire({
      title: 'Error',
      text: 'Invalid parameters JSON',
      icon: 'error',
      confirmButtonText: 'OK'
    });
    return;
  }
  
  fetch('/kubernetes/storage-classes/create', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ name, provisioner, parameters, isDefault })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      $('#createStorageClassModal').modal('hide');
      Swal.fire({
        title: 'Success',
        text: 'StorageClass created successfully',
        icon: 'success',
        confirmButtonText: 'OK'
      });
      loadStorageClasses();
    } else {
      throw new Error(data.error || 'Failed to create StorageClass');
    }
  })
  .catch(error => {
    Swal.fire({
      title: 'Error',
      text: error.message,
      icon: 'error',
      confirmButtonText: 'OK'
    });
  });
});

// Set Default StorageClass
function setDefaultStorageClass(e) {
  const name = e.target.dataset.name;
  
  fetch('/kubernetes/storage-classes/set-default', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ name })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      Swal.fire({
        title: 'Success',
        text: 'Default StorageClass updated',
        icon: 'success',
        confirmButtonText: 'OK'
      });
      loadStorageClasses();
    } else {
      throw new Error(data.error || 'Failed to set default StorageClass');
    }
  })
  .catch(error => {
    Swal.fire({
      title: 'Error',
      text: error.message,
      icon: 'error',
      confirmButtonText: 'OK'
    });
  });
}

// Delete StorageClass
function deleteStorageClass(e) {
  const name = e.target.dataset.name;
  
  if (!confirm(`Are you sure you want to delete StorageClass ${name}?`)) return;
  
  fetch(`/kubernetes/storage-classes/${name}`, {
    method: 'DELETE'
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      Swal.fire({
        title: 'Success',
        text: 'StorageClass deleted successfully',
        icon: 'success',
        confirmButtonText: 'OK'
      });
      loadStorageClasses();
    } else {
      throw new Error(data.error || 'Failed to delete StorageClass');
    }
  })
  .catch(error => {
    Swal.fire({
      title: 'Error',
      text: error.message,
      icon: 'error',
      confirmButtonText: 'OK'
    });
  });
}

// Refresh button
document.getElementById('refreshStorageClasses').addEventListener('click', loadStorageClasses);

// Initial load
