        function updateYamlPreview() {
            const ingressName = document.getElementById('ingressName').value || 'example-ingress';
            const namespace = document.getElementById('namespace').value || 'default';
            const ingressClassName = document.getElementById('ingressClassName').value;
            
            // Collect rules
            const rules = [];
            document.querySelectorAll('.ingress-rule').forEach(ruleDiv => {
                const host = ruleDiv.querySelector('input[name="host"]').value;
                const paths = [];
                
                ruleDiv.querySelectorAll('.path-row').forEach(pathRow => {
                    const path = pathRow.querySelector('input[name="path"]').value;
                    const pathType = pathRow.querySelector('select[name="pathType"]').value;
                    const serviceName = pathRow.querySelector('select[name="serviceName"]').value;
                    const servicePort = pathRow.querySelector('input[name="servicePort"]').value;
                    
                    if (serviceName && servicePort) {
                        paths.push({
                            path,
                            pathType,
                            serviceName,
                            servicePort: parseInt(servicePort)
                        });
                    }
                });
                
                if (paths.length > 0) {
                    rules.push({
                        host,
                        paths
                    });
                }
            });
            
            // Collect TLS
            const tls = [];
            document.querySelectorAll('.tls-row').forEach(tlsRow => {
                const secretName = tlsRow.querySelector('input[name="tlsSecretName"]').value;
                const hosts = [];
                
                tlsRow.querySelectorAll('input[name="tlsHost"]').forEach(hostInput => {
                    if (hostInput.value) {
                        hosts.push(hostInput.value);
                    }
                });
                
                if (secretName && hosts.length > 0) {
                    tls.push({
                        secretName,
                        hosts
                    });
                }
            });
            
            // Generate YAML
            let yaml = `apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ${ingressName}
  namespace: ${namespace}
spec:
`;
            
            if (ingressClassName) {
                yaml += `  ingressClassName: ${ingressClassName}\n`;
            }
            
            if (rules.length > 0) {
                yaml += `  rules:\n`;
                rules.forEach(rule => {
                    yaml += `  - host: ${rule.host}\n`;
                    yaml += `    http:\n`;
                    yaml += `      paths:\n`;
                    
                    rule.paths.forEach(path => {
                        yaml += `      - path: ${path.path}\n`;
                        yaml += `        pathType: ${path.pathType}\n`;
                        yaml += `        backend:\n`;
                        yaml += `          service:\n`;
                        yaml += `            name: ${path.serviceName}\n`;
                        yaml += `            port:\n`;
                        yaml += `              number: ${path.servicePort}\n`;
                    });
                });
            }
            
            if (tls.length > 0) {
                yaml += `  tls:\n`;
                tls.forEach(tlsConfig => {
                    yaml += `  - hosts:\n`;
                    tlsConfig.hosts.forEach(host => {
                        yaml += `    - ${host}\n`;
                    });
                    yaml += `    secretName: ${tlsConfig.secretName}\n`;
                });
            }
            
            document.getElementById('yamlPreview').textContent = yaml;
        }
        
